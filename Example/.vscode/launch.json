{
    "configurations": [
        {
            "name": "Debug HelloWorld",
            "type": "lldb-dap",
            "request": "attach",
            "preLaunchTask": "_launch_helloworld",
            "debuggerRoot": "${workspaceFolder}",
            "attachCommands": [
                "command script import '${workspaceFolder}/scripts/lldb_inject_settings.py",
                "process connect connect://localhost:6667",
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "timeout": 1000,
        },
    ],
    "options": {
        "console": "integratedTerminal",
    }
}